{{ title_prefix }}
{% if label %}
  <div class="custom-title container mb-5"><h2{{ title_attributes.addClass('font-weight-bold') }}>Chiffres clés</h2></div>
{% endif %}
{{ title_suffix }}

<div id="chiffres-container" class="container-fluid block since-year">
  <div id="chiffres-year" class=""><h3>{{ "Depuis 1992"|trans }}</h3></div>
  <div id="chiffres" class="container-fluid bottom-widget">
    <div id="list-items" class="row text-center">
      <div class="chiffre-item col-6 col-sm-6 col-md-3 col-lg-3 text-center">
        <div>
          <img src="/web/themes/custom/norsys_base/images/picto-collaborateurs.png" alt="collab icon"/>
        </div>
        <br>
        <span class="chiffres">75 424</span>  <br> <span class="chiffres-desc mw-100"> {{ 'TPE agricoles'|trans }} <br> {{ 'familiales soutenues'|trans }} </span>
      </div>
      <div class="chiffre-item col-6 col-sm-6 col-md-3 col-lg-3 text-center">
        <div>
          <img src="/web/themes/custom/norsys_base/images/picto-partenaires.png" alt="patenaire icon"/>
        </div>
        <br>
        <span class="chiffres">377 120</span> <br> <span class="chiffres-desc mw-100">{{ 'personnes sorties'|trans }} <br> {{ 'de la pauvreté'|trans }} </span>
      </div>
      <div class="chiffre-item col-6 col-sm-6 col-md-3 col-lg-3 text-center">
        <div>
          <img src="/web/themes/custom/norsys_base/images/picto-projets-en-cours.png" alt="project icon"/>
        </div>
        <br>
        <span class="chiffres"> 443</span> <br> <span class="chiffres-desc mw-100">{{ 'organisations locales'|trans }} <br> {{ 'accompagnées'|trans }} </span>
      </div>
      <div class="chiffre-item col-6 col-sm-6 col-md-3 col-lg-3 text-center">
        <div>
          <img src="/web/themes/custom/norsys_base/images/picto-millions-engages.png" alt="million icon"/>
        </div>
        <br>
        <span class="chiffres"> 26 </span><br> <span class="chiffres-desc mw-100">{{ "pays "|trans }} <br> {{ 'd’intervention'|trans }} </span>
      </div>

    </div>
  </div>
</div>
